<h1>Authentications#index</h1>
<p>Find me in app/views/authentications/index.html.erb</p>

<% if @authentications %>
  <% unless @authentications.empty? %>
    <p><strong>Linked accounts:</strong></p>
    <div class="authentications">
    <% for authentication in @authentications %>
      <div class="authentication">
        <div class="provider"><%= authentication.provider.titleize %></div>
        <div class="uid"><%= authentication.access_token %></div>
        <div class="uid"><%= authentication.access_secret %></div>
      </div>
    <% end %>
    <div class="clear"></div>
    </div>
  <% end %>
  <p><strong>Link another service</strong></p>
<% else %>
  <p><strong>Sign in through one of these services:</strong></p>
<% end %>

<a href="/auth/twitter" class="auth_provider">
Twitter
</a>
<a href="/auth/facebook" class="auth_provider">
Facebook
</a>
<a href="/auth/google_apps" class="auth_provider">
Google
</a>
<a href="/auth/open_id" class="auth_provider">
OpenID
</a>
